terraform {
  required_version = ">= 1.10.0"
  required_providers {
    aws = {
      source  = "hashicorp/aws"
      version = "~> 6.0"
    }
  }
}

provider "aws" {
  region = var.aws_region

  default_tags {
    tags = {
      Engineer    = var.project_info["engineer_name"]
      ProjectCode = var.project_info["project_code"]
    }
  }
}
